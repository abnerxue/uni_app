<view class="background"><view class="backs"><view class="order-tab"><view class="order-tabs"><view data-event-opts="{{[['tap',[['orders',[1]]]]]}}" class="{{[orderid==1?'active':'order']}}" bindtap="__e">全部</view><view data-event-opts="{{[['tap',[['orders',[2]]]]]}}" class="{{[orderid==2?'active':'order']}}" bindtap="__e">待付款</view><view data-event-opts="{{[['tap',[['orders',[3]]]]]}}" class="{{[orderid==3?'active':'order']}}" bindtap="__e">待收货</view><view data-event-opts="{{[['tap',[['orders',[4]]]]]}}" class="{{[orderid==4?'active':'order']}}" bindtap="__e">待评价</view></view></view><view hidden="{{!(tan)}}" class="tan"><text>{{message}}</text></view><view hidden="{{!(quxiao)}}" class="tishi"><view class="tishis"><view class="tishis-content">是否取消此订单</view><view class="tishi-btn"><view data-event-opts="{{[['tap',[['e0',['$event']]]]]}}" class="quxiaos" bindtap="__e">取消</view><view data-event-opts="{{[['tap',[['quedin']]]]}}" class="quedin" bindtap="__e">确定</view></view></view></view><view class="backs"><block wx:for="{{orderlist}}" wx:for-item="orderlists" wx:for-index="__i0__"><view class="order-list"><view class="order-time"><text class="order-time-font">{{orderlists.orderTime}}</text><block wx:if="{{orderlists.payStatus==1&&orderlists.logisticsStatus==1}}"><text class="order-time-fonts">等待付款</text></block><block wx:if="{{orderlists.payStatus==2&&orderlists.logisticsStatus==1}}"><text class="order-time-fonts">支付未成功</text></block><block wx:if="{{orderlists.logisticsStatus==1&&orderlists.payStatus==3}}"><text class="order-time-fonts">待发货</text></block><block wx:if="{{orderlists.logisticsStatus==2&&orderlists.payStatus==3}}"><text class="order-time-fonts">已发货</text></block><block wx:if="{{orderlists.logisticsStatus==3&&orderlists.appraise==0}}"><text class="order-time-fonts">待评价</text></block></view><block wx:for="{{orderlists.goods}}" wx:for-item="list" wx:for-index="__i1__"><view><view data-event-opts="{{[['tap',[['order_del',['$0'],[[['orderlist','',__i0__,'id']]]]]]]}}" class="order-image" bindtap="__e"><view class="order-title-image"><image class="order-images" src="{{list.thumb}}"></image><view class="order-title">{{list.title}}</view></view><view class="momey"><view class="momeys">{{"￥"+list.price}}</view><view class="order-number">{{"X"+list.number}}</view></view></view></view></block><view class="miaoshu">{{"共"+orderlists.goods.length+"商品"}}<text class="xufukuai">需付款:</text><text class="mome">{{"￥"+orderlists.totalPrice}}</text></view><view class="btns"><block wx:if="{{orderlists.payStatus<=2}}"><view data-event-opts="{{[['tap',[['pay',['$0'],[[['orderlist','',__i0__,'serialNumber']]]]]]]}}" class="btn" bindtap="__e">去支付</view></block><block wx:if="{{orderlists.payStatus<=2}}"><view data-event-opts="{{[['tap',[['qux',['$0'],[[['orderlist','',__i0__,'id']]]]]]]}}" class="btn" bindtap="__e">取消订单</view></block><block wx:if="{{orderlists.logisticsStatus<3&&orderlists.payStatus==3}}"><view data-event-opts="{{[['tap',[['queren',['$0'],[[['orderlist','',__i0__,'id']]]]]]]}}" class="btn" bindtap="__e">确认收货</view></block><block wx:if="{{orderlists.logisticsStatus<=3&&orderlists.payStatus==3}}"><view data-event-opts="{{[['tap',[['tans',['$0','$1'],[[['orderlist','',__i0__,'logisticsStatus']],[['orderlist','',__i0__,'id']]]]]]]}}" class="btn" bindtap="__e">查看物流</view></block><block wx:if="{{orderlists.logisticsStatus==3&&orderlists.payStatus==3&&orderlists.appraise==0}}"><view data-event-opts="{{[['tap',[['comment',['$0','$1'],[[['orderlist','',__i0__,'id']],[['orderlist','',__i0__]]]]]]]}}" class="btn" bindtap="__e">评价</view></block></view></view></block></view></view></view>